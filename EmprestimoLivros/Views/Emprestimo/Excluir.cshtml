@model EmprestimosModel

@{
    ViewData["title"] = "Excluir Empréstimo";
}

<div class="container p-5 rounded-5 shadow-lg">
    <div class="mb-5 text-center">
        <h1 class="text-light-emphasis">Exclusão de Empréstimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <h2 class="text-dark">Tem certeza que deseja excluir o registro abaixo?</h2>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-dark">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-dark">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-dark">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual é o livro que está sendo emprestado?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-outline-danger w-50">Excluir</button>
            <a class="btn btn-outline-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
